<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="55dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="8dp"
    app:cardBackgroundColor="@color/cardview_dark_background"
    android:layout_marginBottom="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="4dp">

        <TextView
            android:id="@+id/invFoodItemName"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="2dp"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="0dp"
            android:gravity="center"
            android:text="DefaultName"
            android:textColor="#FFFFFF"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/PurchDateTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="2dp"
            android:layout_toEndOf="@+id/invFoodItemName"
            android:layout_toRightOf="@+id/invFoodItemName"
            android:text="Purch:"
            android:textColor="#FFFFFF" />

        <TextView
            android:id="@+id/ExpDateTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/PurchDateTitle"
            android:layout_marginStart="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="4dp"
            android:layout_toEndOf="@+id/invFoodItemName"
            android:layout_toRightOf="@+id/invFoodItemName"
            android:text="Expiry:"
            android:textColor="#FFFFFF" />

        <TextView
            android:id="@+id/foodItemPurchDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginStart="7dp"
            android:layout_marginLeft="7dp"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp"
            android:layout_toStartOf="@+id/deleteIcon"
            android:layout_toLeftOf="@+id/deleteIcon"
            android:layout_toEndOf="@+id/PurchDateTitle"
            android:layout_toRightOf="@+id/PurchDateTitle"
            android:text="XX/XX/XX"
            android:textColor="#FFFFFF" />

        <TextView
            android:id="@+id/foodItemExpDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/foodItemPurchDate"
            android:layout_marginStart="7dp"
            android:layout_marginLeft="7dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="9dp"
            android:layout_marginRight="9dp"
            android:layout_toStartOf="@+id/deleteIcon"
            android:layout_toLeftOf="@+id/deleteIcon"
            android:layout_toEndOf="@+id/ExpDateTitle"
            android:layout_toRightOf="@+id/ExpDateTitle"
            android:text="XX/XX/XX"
            android:textColor="#FFFFFF" />

        <ImageView
            android:id="@+id/deleteIcon"
            android:layout_width="55dp"
            android:layout_height="43dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="11dp"
            android:layout_marginRight="11dp"
            app:srcCompat="@android:drawable/ic_menu_delete" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>

