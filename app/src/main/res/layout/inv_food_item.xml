<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="4dp"
    app:cardBackgroundColor="@color/cardview_dark_background"
    android:paddingBottom="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="4dp">

        <TextView
            android:id="@+id/invFoodItemName"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="0dp"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="3dp"
            android:gravity="center"
            android:text="DefaultName"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/PurchDateTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="40dp"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="2dp"
            android:layout_toEndOf="@+id/invFoodItemName"
            android:layout_toRightOf="@+id/invFoodItemName"
            android:text="Purchase Date:" />

        <TextView
            android:id="@+id/ExpDateTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/PurchDateTitle"
            android:layout_marginStart="40dp"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="8dp"
            android:layout_toEndOf="@+id/invFoodItemName"
            android:layout_toRightOf="@+id/invFoodItemName"
            android:text="Expiration Date:" />

        <TextView
            android:id="@+id/foodItemPurchDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="47dp"
            android:layout_marginLeft="47dp"
            android:layout_marginTop="2dp"
            android:layout_toEndOf="@+id/PurchDateTitle"
            android:layout_toRightOf="@+id/PurchDateTitle"
            android:text="XX/XX/XX" />

        <TextView
            android:id="@+id/foodItemExpDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/foodItemPurchDate"
            android:layout_marginStart="45dp"
            android:layout_marginLeft="45dp"
            android:layout_marginTop="8dp"
            android:layout_toEndOf="@+id/ExpDateTitle"
            android:layout_toRightOf="@+id/ExpDateTitle"
            android:text="XX/XX/XX" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>

